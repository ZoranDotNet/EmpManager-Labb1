@model EmpManager.Models.Employee

@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <div class="w-50 shadow mx-auto">
        <form method="post" class="bg-dark text-light rounded">
            <div class="p-4 mt-4">
                <div class="row pb-2">
                    <h2 class="text-center text-light">Edit Employee</h2>
                    <hr />

                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="Firstname">Firstname</label>
                    <input asp-for="Firstname" type="text" class="form-control" />
                    <span class="text-danger" asp-validation-for="Firstname"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Lastname">Lastname</label>
                    <input asp-for="Lastname" type="text" class="form-control" />
                    <span class="text-danger" asp-validation-for="Lastname"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" type="email" class="form-control" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="mb-5">
                    <label asp-for="Phonenumber">Phonenumber</label>
                    <input asp-for="Phonenumber" type="text" class="form-control" />
                    <span class="text-danger" asp-validation-for="Phonenumber"></span>
                </div>
                <div class="d-flex justify-content-center align-items-center pb-2">

                    <button type="submit" class="btn btn-primary me-2 rounded-2 form-control">Update</button>

                    <a class="btn btn-secondary rounded-2 ms-2 form-control" asp-controller="Employees" asp-action="Index">Cancel</a>
                </div>
            </div>



        </form>
    </div>

</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
